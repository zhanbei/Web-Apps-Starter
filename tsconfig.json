{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "ts-dist",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "es2019"
    ],
    "sourceMap": false,
    "allowJs": false,
    // @see https://github.com/Microsoft/TypeScript-React-Starter/issues/8
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "exclude": [
    "build",
    "dist",
    "node_modules"
  ]
}
